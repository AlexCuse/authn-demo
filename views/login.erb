<div class="row">
  <form id="login" class="col-sm-4 mx-auto">
    <h2 class="mb-0">Sign In</h2>
    <p><small>or <a href="/signup">create an account</a></small></p>

    <!-- Email (Username) -->
    <div class="form-group">
      <label for="user_email">Email</label>
      <input type="email" id="user_email" name="user[email]" class="form-control" />
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="user_password">
        Password
        <small><a href="/login/forgot">(Forgot your password?)</a></small>
      </label>
      <input type="password" id="user_password" class="form-control" />
    </div>

    <div class="form-group"><button type="submit" class="btn btn-primary w-100">Sign in</button></div>
    <div class="form-group"><a class="btn btn-secondary w-100" href="<%= Keratin::AuthN.config.issuer %>/oauth/github?redirect_uri=<%= url('/register') %>">Sign in with GitHub</a></div>

  </form>
</div>
